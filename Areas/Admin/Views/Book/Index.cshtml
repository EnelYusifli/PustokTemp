@model List<Book>
@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="row align-items-center justify-content-between">
        <h1>Books:</h1>
        <a asp-action="create" asp-controller="book" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Desc</th>
                <th scope="col">Author</th>
                <th scope="col">Genre</th>
                <th scope="col">BookCode</th>
                <th scope="col">PosterImage</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Title</td>
                    <td>@item.Desc</td>
                    <td>@item.Author.FullName</td>
                    <td>@item.Genre.Name</td>
                    <td>@item.BookCode</td>
                    <td><img style="width:130px" src="~/uploads/books/@item.BookImages.Where(x=>x.IsPoster==true).FirstOrDefault().Url" alt="Book Image" /></td>
                    <td>
                        <a asp-action="update" asp-controller="book" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="book" asp-route-id="@item.Id" class="btn btn-danger delete-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

